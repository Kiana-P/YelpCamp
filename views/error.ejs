<% layout('layouts/boilerplate') %>
<div class="row mt-3">
    <div class="col-6 offset-3">
        <div class="alert alert-danger" role="alert">
            <h3><%= err.statusCode %></h3>
            <p><%= err.message %></p>
            <% if (process.env.NODE_ENV !== 'production'){ %>
            <p><%= err.stack %></p>    
            <% } %>
        </div>
    </div>
</div>